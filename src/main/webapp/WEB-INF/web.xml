<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>HDPAppStudio</display-name>
	<servlet>
		<description></description>
		<display-name>AppStudioDataListener</display-name>
		<servlet-name>AppStudioDataListener</servlet-name>
		<servlet-class>com.hortonworks.digitalemil.hdpappstudio.web.AppStudioDataListener</servlet-class>
		<init-param>
			<param-name>brokerList</param-name>
			<param-value>127.0.0.1:9092</param-value>
		</init-param>
		<init-param>
			<param-name>acks</param-name>
			<param-value>1</param-value>
		</init-param>
		<init-param>
			<param-name>partitioner</param-name>
			<param-value>kafka.producer.DefaultPartitioner</param-value>
		</init-param>
		<init-param>
			<param-name>serializer</param-name>
			<param-value>kafka.serializer.StringEncoder</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppStudioDataListener</servlet-name>
		<url-pattern>/data/publish</url-pattern>
	</servlet-mapping>
</web-app>